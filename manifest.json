{
  "manifest_version": 2,
  "name": "HanViet: Từ Điển Hán Việt",
  "short_name": "HanViet",
  "version": "0.0.1",
  "author": "Christian Schiller, Liên Hoàng",
  "homepage_url": "https://github.com/aliengator/zhongwen",
  "description": "Công cụ học tiếng Trung. Fork of the popular Zhongwen popup dictionary.",
  "icons": {
    "16": "images/zhongwen16.png",
    "48": "images/zhongwen48.png",
    "128": "images/zhongwen.png"
  },
  "browser_action": {
    "default_icon": "images/zhongwen48.png",
    "default_title": "Từ Điển Hán Việt Popup"
  },
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/jquery-3.3.1.min.js",
        "js/zhuyin.js",
        "content.js"
      ],
      "css": [
        "css/content.css"
      ],
      "all_frames": true
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "commands": {
    "_execute_browser_action": {
      "description": "Enable/Disable Zhongwen"
    }
  },
  "web_accessible_resources": [
    "css/*",
    "js/*",
    "images/*"
  ]
}
